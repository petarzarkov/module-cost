{
  "name": "@pzarkov/module-cost",
  "version": "0.1.3",
  "description": "Analyze the cost of your node_modules - zero dependencies",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "bin": {
    "module-cost": "./dist/cjs/cli.js"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "keywords": [
    "node_modules",
    "cost",
    "size",
    "dependencies",
    "analyzer",
    "cli"
  ],
  "author": {
    "name": "Petar Zarkov",
    "email": "pzarko1@gmail.com",
    "url": "https://github.com/petarzarkov"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "homepage": "https://github.com/petarzarkov/module-cost#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/petarzarkov/module-cost"
  },
  "scripts": {
    "prepare": "husky || true",
    "dev": "bun --watch src/cli.ts",
    "start": "bun src/cli.ts",
    "prebuild": "rm -rf dist",
    "build:esm": "tsc -p tsconfig.build.esm.json",
    "build:cjs": "tsc -p tsconfig.build.cjs.json",
    "build:types": "tsc -p tsconfig.build.types.json",
    "build": "bun run --parallel build:esm build:cjs build:types",
    "postbuild": "echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json && echo '{\"type\":\"module\"}' > dist/esm/package.json && chmod +x dist/cjs/cli.js",
    "test": "bun test --bail",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "lint": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit --skipLibCheck --skipDefaultLibCheck",
    "mod:cost": "bun src/cli.ts",
    "mod:cost:dev": "bun src/cli.ts --include-dev",
    "mod:cost:json": "bun src/cli.ts --json --include-dev",
    "mod:cost:less": "bun src/cli.ts --include-dev --less",
    "version": "bun ./scripts/version.ts",
    "version:dry-run": "DRY_RUN=true bun ./scripts/version.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@types/bun": "1.3.9",
    "@types/node": "25.2.3",
    "glob": "13.0.4",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.ts": [
      "bun run lint",
      "bun run format"
    ]
  }
}
